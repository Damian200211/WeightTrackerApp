<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-feature android:name="android.hardware.telephony" android:required="true" />

    <application
        android:name=".WeightTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/new_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeightTracker">

        <!-- Login is the launcher activity -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GridActivity" />
        <activity android:name=".AddWeightActivity" />
        <activity android:name=".SmsPermissionActivity" />
        <activity android:name=".WeightHistoryActivity" />
        <activity android:name=".SettingsActivity" />

    </application>

</manifest>